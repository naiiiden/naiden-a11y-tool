{
  "manifest_version": 3,
  "name": "naiden's a11y tool",
  "description": "naiden's accessibility audit tool",
  "version": "1.0",
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {

  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html", "scripts/iframe.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle_naiden_a11y_tool": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "toggle naiden's a11y tool"
    }
  }
}